<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:showIn="@layout/dealdetailed">

    <RelativeLayout
        android:id="@+id/R_imageContent"
        android:layout_width="fill_parent"
        android:layout_height="147dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_newimage"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"

            android:src="@drawable/empty_deals" />

        <LinearLayout
            android:id="@+id/L_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_newimage"
            android:background="#80000000"
            android:orientation="vertical"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">


            <TextView
                android:id="@+id/tv_totalphotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:padding="2dp"
                android:singleLine="true"
                android:text="1/1"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/L_DealInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_marginTop="10dp">




            <TextView
                android:id="@+id/tv_dealtextindeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="visible"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_categories"
                android:textColor="#868484"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_datesindeal"
                android:textColor="#868484" />

        </LinearLayout>

        <ImageView
            android:id="@+id/v_separator1"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="5dp"
            android:background="#CECECE"
            android:contentDescription="@null" />

        <LinearLayout
            android:id="@+id/L_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description \r\n"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/tv_descriptionlarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="false"
                android:textColor="#868484"
                android:textIsSelectable="false" />

            <LinearLayout
                android:id="@+id/L_openhouseValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/v_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="5dp"
            android:background="#CECECE"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/check_shop"
            android:clickable="true"
            android:contextClickable="false">

            <RelativeLayout
                android:layout_width="91dp"
                android:layout_height="93dp"
                android:id="@+id/rl_shopimagecontent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_shopimageindeal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left|end"
                    android:adjustViewBounds="true"
                    android:src="@drawable/empty_shops"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="left|end" >

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_gravity="left"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_shopindeal"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_floorindeal"
                    android:textColor="#868484" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_categoriesindeal"
                    android:textColor="#868484" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>